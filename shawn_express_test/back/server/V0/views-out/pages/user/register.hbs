<style>
    .wrap-login{padding:50px 0}
    .cont-login{display:table;width:292px;margin:0 auto}
    .login-info{display:table-cell;vertical-align:top;width:200px}
    .login-info .info-id{margin-bottom:4px}
    .login-info label{float:left;width:50px;margin-top:4px;text-align:center}
    .login-info input{width:100%;box-sizing:border-box}
    .login-submit{display:table-cell;position:relative;vertical-align:top}
    .btn-submit{position:absolute;top:0;bottom:0;width:100%;background-color:#118EFF;color:aliceblue}
    .login-comp{display:block;overflow:hidden;margin-right:4px}
</style>
<!-- 영역 수준 : wrap > cont > area > ... -->
<div class="wrap-login">
    <form method="post" action="/user/json">
        <fieldset>
            <legend class="screen-out">로그인</legend>
            <div class="cont-login">
                <div class="login-info">
                    <div class="info-id">
                        <label for="userId">아이디</label>
                        <span class="login-comp">
                            <input type="text" name="userId" id="userId">
                        </span>

                    </div>
                    <div class="info-pwd">
                        <label for="userPwd">비밀번호</label>
                        <span class="login-comp">
                            <input type="password" name="userPwd" id="userPwd">
                        </span>

                    </div>
                </div>
                <div class="login-submit">
                    <button class="btn-submit" type="submit">가입하기</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>